<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-12 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= render "search" %>
      <table class="table table-hover table-inverse">
        <h2>Results index</h2>
        <% if @range == "User" %>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
              </tr>
            <% end %>  
          </tbody>
        <% else %>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>  
          </tbody>
        <% end %>  
      </table>
    </div>
  </div>
</div>